/*
 * Device Tree Include file for Kontron SMARC-sAL28.
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "kontron,sl28", "fsl,ls1028a";

	fragment@0 {
		target-path = "/";
		__overlay__ {
			regulators {
				compatible = "simple-bus";
				#address-cells = <0x1>;
				#size-cells = <0x0>;

				can0_en_reg: fixedregulator@0 {
					compatible = "regulator-fixed";
					reg = <0>;
					regulator-name = "CAN0_EN";
					regulator-min-microvolt = <0x1b7740>;
					regulator-max-microvolt = <0x1b7740>;
					gpio = <&pm_gpio 0x6 0x0>;
					enable-active-high;
				};
			};

			wm8904_mclk: wm8904-mclk {
				compatible = "pwm-clock";
				#clock-cells = <0>;
				pwms = <&pwm0 2 80 0>;
			};

			sound {
				compatible = "fsl,imx-audio-wm8904";
				model = "imx-wm8904";
				sound-dai = <&sai6>;
				audio-codec = <&wm8904>;
				audio-routing =
					"Headphone Jack", "HPOUTR",
					"Headphone Jack", "HPOUTL",
					"IN1L", "Line In Jack",
					"IN1R", "Line In Jack",
					"Mic Jack", "MICBIAS",
					"IN2L", "Mic Jack",
					"IN2R", "Mic Jack";
			};
		};
	};

	fragment@1 {
		target = <&i2c3>;

		__overlay__ {
			#address-cells = <0x1>;
			#size-cells = <0x0>;

			pm_gpio: tca9554@22 {
				compatible = "nxp,pca9554";
				reg = <0x22>;
				gpio-controller;
				#gpio-cells = <0x2>;
				status = "okay";
			};
		};
	};

	fragment@2 {
		target = <&i2c4>;

		__overlay__ {
			#address-cells = <0x1>;
			#size-cells = <0x0>;

			wm8904: wm8904@1a {
				compatible = "wlf,wm8904";
				reg = <0x1a>;
				clocks = <&wm8904_mclk>;
				clock-names = "mclk";
			};
		};
	};

	fragment@3 {
		target = <&can0>;
		__overlay__ {
			status = "okay";
			xceiver-supply = <&can0_en_reg>;
		};
	};

	fragment@4 {
		target = <&sai6>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@5 {
		target = <&pwm0>;
		__overlay__ {
			status = "okay";
		};
	};
};
